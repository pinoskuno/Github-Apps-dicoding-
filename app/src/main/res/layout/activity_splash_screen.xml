<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="SplashScreen.splashScreen"
    android:background="@color/teal_200">


    <ImageView
        android:id="@+id/img_spl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="220dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_kisspng_computer_icons_logo_portable_network_graphics_clip_icons_for_free_iconza_circle_social_5b7fe" />

    <TextView
        android:id="@+id/splash_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/github"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_spl"
        app:layout_constraintEnd_toEndOf="@+id/img_spl"
        app:layout_constraintStart_toStartOf="@+id/img_spl"
        app:layout_constraintTop_toTopOf="@+id/img_spl"
        app:layout_constraintVertical_bias="0.954" />
</androidx.constraintlayout.widget.ConstraintLayout>